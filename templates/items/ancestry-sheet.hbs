<form class="{{cssClass}} sheet path-sheet" autocomplete="off">

  <div class="flex-row">

    {{!-- Left Column --}}
    <div class="left-col">

      {{!-- Header --}}
      <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
          <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize "WW.ItemName"}}"/></h1>

          <div class="tier">
            {{localize "WW.Ancestry"}}
          </div>
          
        </div>
      </header>

      {{!-- Description --}}
      {{editor system.description.enriched target="system.description.value" button=true owner=owner editable=editable}}

    </div>

    {{!-- Right Column --}}
    <div class="right-col">
      
      <div class="statbox">
      
        {{!-- Header --}}
        <h3>{{item.name}} {{localize "WW.Traits"}}</h3>

        {{!-- Type --}}
        <div class="flex-row stat-inline">
          <label>{{localize "WW.Type"}}</label> <input name="system.benefits.benefit1.type" type="text"
            value="{{benefits.benefit1.type}}" />
          
        </div>

        {{!-- Senses --}}
        <div class="flex-row stat-inline input-list">
          <label>{{localize "WW.Senses.Label"}}</label>
          
          <div>

            {{#each benefits.benefit1.senses as |detail id|}}
            <span class="array-input-container">
              <input class="array-input auto-resize" name="" data-array="benefits.benefit1.senses" data-id="{{id}}" type="text"
                value="{{detail}}" />
              
              <a class="array-button" data-action="remove" data-array="benefits.benefit1.senses" data-id="{{id}}"
                title="{{localize "WW.Senses.Remove"}}"><i class="fas fa-trash"></i></a>
              
              {{#unless @last}},{{/unless}}
            </span>
            {{/each}}

            <a class="array-button" data-action="add" data-array="benefits.benefit1.senses" data-loc="Senses"
              title="{{localize "WW.Senses.Add"}}"><i class="fas fa-circle-plus"></i></a>
            
          </div>
          
        </div>

        {{!-- Bonus Languages --}}
        <div class="flex-row stat-inline input-list">
          <label>{{localize "WW.Languages.Bonus"}}</label>
          
          <div>

            {{#each benefits.benefit1.bonusLanguages as |detail id|}}
            <span class="array-input-container">
              <input class="array-input auto-resize" name="" data-array="benefits.benefit1.bonusLanguages" data-id="{{id}}" type="text"
                value="{{detail}}" />
              
              <a class="array-button" data-action="remove" data-array="benefits.benefit1.bonusLanguages" data-id="{{id}}"
                title="{{localize "WW.Languages.Remove"}}"><i class="fas fa-trash"></i></a>
              
              {{#unless @last}},{{/unless}}
            </span>
            {{/each}}

            <a class="array-button" data-action="add" data-array="benefits.benefit1.bonusLanguages" data-loc="Languages"
              title="{{localize "WW.Languages.Add"}}"><i class="fas fa-circle-plus"></i></a>
            
          </div>

        </div>

        {{!-- Attributes --}}
        <div class="flex-row stat-inline">
          <label>{{localize "WW.Attributes"}}</label> <input name="system.benefits.benefit1.attributes" type="text"
            value="{{benefits.benefit1.attributes}}" />
        </div>
      
        {{!-- Natural Defense, Health --}}
        <div class="flex-row stat-inline">
                
          <span>
            <label>{{localize "WW.Defense.Natural"}}</label>
            +<input name="system.benefits.benefit1.stats.naturalIncrease" type="number"
              value="{{benefits.benefit1.stats.naturalIncrease}}" min="0" placeholder="0" />
          </span>
      
          <span>
            <label>{{localize "WW.Health.Label"}}</label>
            +<input name="system.benefits.benefit1.stats.healthIncrease" type="number"
              value="{{benefits.benefit1.stats.healthIncrease}}" min="0" placeholder="0" />
          </span>
          
        </div>

        {{!-- Size, Speed --}}
        <div class="flex-row">

          <span class="stat-inline">
            <label>{{localize "WW.Size"}}</label>

            <input name="system.benefits.benefit1.stats.size" type="number"
              value="{{benefits.benefit1.stats.size}}" min="0" placeholder="1" />
            
          </span>
      
          <span class="stat-inline">
            <label>{{localize "WW.Speed.Label"}}</label>

            <input name="system.benefits.benefit1.stats.speed" type="number"
              value="{{benefits.benefit1.stats.speed}}" min="1" placeholder="1" />
            
            (<input class="auto-resize" name="system.benefits.benefit1.stats.speedSpecial" type="text"
              value="{{benefits.benefit1.stats.speedSpecial}}" placeholder="Swimmer" />)
          </span>
          
        </div>

        {{!-- Immune --}}
        <div class="flex-row stat-inline input-list">
          <label>{{localize "WW.Immune.Label"}}</label>

          <div>

            {{#each benefits.benefit1.immune as |detail id|}}
            <span class="array-input-container">
              <input class="array-input auto-resize" name="" data-array="benefits.benefit1.immune" data-id="{{id}}" type="text"
                value="{{detail}}" />
              
              <a class="array-button" data-action="remove" data-array="benefits.benefit1.immune" data-id="{{id}}"
                title="{{localize "WW.Immune.Remove"}}"><i class="fas fa-trash"></i></a>
              
              {{#unless @last}},{{/unless}}
            </span>
            {{/each}}

            <a class="array-button" data-action="add" data-array="benefits.benefit1.immune" data-loc="Immune"
              title="{{localize "WW.Immune.Add"}}"><i class="fas fa-circle-plus"></i></a>
            
          </div>

        </div>
      
        {{!-- Items Area --}}
        <ol class="described-list items-area benefit1">
          {{#unless benefits.benefit1.itemsInfo}}{{localize "WW.CharOption.DropHere"}}{{/unless}}
      
          {{#each benefits.benefit1.itemsInfo as |item id|}}
          <li class="path-item item{{#if item.missing}} missing{{/if}}" data-item-uuid="{{item.uuid}}">
            <label>{{item.name}}</label>
      
            <span class="buttons">
              {{#unless item.missing}}<a class="ref-edit" title="{{localize " WW.CharOption.EditRef"}}"><i
                  class="fas fa-edit"></i></a>{{/unless}}
              <a class="ref-remove" title="{{localize " WW.CharOption.RemoveRef"}}"><i class="fas fa-trash"></i></a>
            </span>
      
            <span>{{{item.description}}}</span>
          </li>
          {{/each}}
        </ol>

      </div>
    
    </div>

  </div>
  
</form>