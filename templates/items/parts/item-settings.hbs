<h2>{{localize "WW.Settings"}}</h2>

<div class="flex-row stat-inline">
    {{localize "WW.Roll.Always"}}
    <select class="mx-1" name="system.attribute">
        {{selectOptions attributesObj selected=system.attribute localize=true}}
    </select>
    {{#if system.attribute}}
    {{localize "WW.Boons.With"}}
    <input class="mx-1" type="number" name="system.boons" value="{{system.boons}}" placeholder="0"
        data-dtype="Number" />
    {{localize "WW.Boons.Or"}}
    {{/if}}
</div>

{{#if system.attribute}}
<div class="flex-row stat-inline mt-1">
    {{localize "WW.Roll.Against"}}
    <select class="mx-1" name="system.against">
        {{selectOptions againstObj selected=system.against localize=true}}
    </select>
    
</div>
{{/if}}

<div class="flex-row stat-inline mt-1">
    <label>{{localize "WW.Roll.Targeting.Method"}}</label>
    <select class="mx-1" name="system.targeting">
        {{selectOptions targetingMethods selected=system.targeting localize=true}}
    </select>
</div>