<form class="{{cssClass}} flexcol" autocomplete="off">

    <header class="sheet-header">{{!-- Sheet Header --}}
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "WEIRDWIZARD.ActorName"}}"/></h1>
            <div class="attributes grid grid-4col">{{!-- Attributes --}}
                {{#each system.attributes as |attribute key|}}
                <div class="attribute stat flex-group-center">
                    <label for="system.attributes.{{key}}.value" class="attribute-label">{{attribute.label}}</label>
                    <div class="stat flex-group-center">
                        <input type="number" name="system.attributes.{{key}}.value" value="{{attribute.value}}" min="0" data-dtype="Number"/>
                        <a class="attribute-mod rollable" data-roll="d20+@attributes.{{key}}.mod[modifier]@boons[boons]" data-label="{{attribute.label}}">{{numberFormat attribute.mod decimals=0 sign=true}}</a>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="resources grid grid-3col">
                <div class="stat flex-group-center">{{!-- Defense --}}
                    <label for="system.stats.defense.total" class="resource-label">{{localize "WEIRDWIZARD.Defense"}}</label>
                    <div>{{system.stats.defense.total}} <a class="defense-edit" title="Edit Defense"><i class="fas fa-edit"></i></a></div>  
                </div>
                <div class="stat flex-group-center">{{!-- Damage / Health --}}
                    <label for="system.stats.health.total" class="resource-label">{{localize "WEIRDWIZARD.Damage"}} / {{localize "WEIRDWIZARD.Health.Title"}}</label>
                    <div class="flex-row flex-group-center">
                        <input type="number" name="damage" value="{{system.stats.damage.value}}" min="0" data-dtype="Number"/>
                        <span> / {{system.stats.health.total}} <a class="health-edit" title="Edit Health"><i class="fas fa-edit"></i></a></span>
                    </div>
                </div>
                <div class="stat flex-group-center">{{!-- Bonus Damage --}}
                    <label for="system.stats.bonusdamage.value" class="resource-label">{{localize "WEIRDWIZARD.BonusDamage"}}</label>
                    <div></div><input type="number" name="system.stats.bonusdamage.value" value="{{system.details.bonusdamage.value}}" data-dtype="Number" min="0" placeholder="1" />d6</div>
                </div>
                <!-- CT/MT
                <div class="stat flex-group-center">{{!-- Combat Tokens --}}
                    <label for="system.resources.ct.value" class="resource-label">{{localize "WEIRDWIZARD.CT"}}</label>
                    <div class="flex-center">
                    <input type="number" name="ct" value="{{system.resources.ct.value}}" min="0" data-dtype="Number"/>
                    <span> / </span>
                    <input type="number" name="ct_max" value="{{system.resources.ct.max}}" min="0" data-dtype="Number"/>
                    </div>
                </div>
                <div class="stat flex-group-center">{{!-- Magic Tokens --}}
                    <label for="system.resources.mt.value" class="resource-label">{{localize "WEIRDWIZARD.MT"}}</label>
                    <div class="flex-center">
                    <input type="number" name="mt" value="{{system.resources.mt.value}}" min="0" data-dtype="Number"/>
                    <span> / </span>
                    <input type="number" name="mt_max" value="{{system.resources.mt.max}}" min="0" data-dtype="Number"/>
                    </div>
                </div>
                !-->
            </div>
        </div>
    </header>

    <nav class="sheet-tabs tabs" data-group="primary">{{!-- Sheet Tab Navigation --}}
        <a class="item" data-tab="summary">{{localize "WEIRDWIZARD.Summary"}}</a>
        <a class="item" data-tab="stats">{{localize "WEIRDWIZARD.Stats"}}</a>
        <a class="item" data-tab="details">{{localize "WEIRDWIZARD.Details"}}</a>
        <a class="item" data-tab="gear">{{localize "WEIRDWIZARD.Gear"}}</a>
        <a class="item" data-tab="talents">{{localize "WEIRDWIZARD.Talents"}}</a>
        <a class="item" data-tab="spells">{{localize "WEIRDWIZARD.Spells"}}</a>
    </nav>

    <section class="sheet-body"> {{!-- Sheet Body --}}

        <div class="tab summary" data-group="primary" data-tab="summary">{{!-- Summary Tab --}}
            <div class="resources grid grid-2col">

                <div class="">{{!-- Left Column --}}
                    <h3>{{localize "WEIRDWIZARD.Stats"}}</h3>
                    <div class="stat">{{!-- Level, Ancestry --}}
                        <label for="level" class="resource-label">{{localize "WEIRDWIZARD.Level"}}</label>
                        {{system.stats.level.value}}
                        <label class="ml-2" for="ancestry" class="resource-label">{{localize "WEIRDWIZARD.Ancestry"}}</label>
                        {{system.details.ancestry.value}}
                    </div>
                    <div class="stat">{{!-- Type, Senses --}}
                        {{#if system.details.type.value}}<label for="type" class="resource-label">{{localize "WEIRDWIZARD.Type"}}</label>
                        {{system.details.type.value}}{{/if}}
                        {{#if system.details.senses.value}}<label class="ml-2" for="senses" class="resource-label">{{localize "WEIRDWIZARD.Senses"}}</label>
                        {{system.details.senses.value}}{{/if}}
                    </div>
                    <div class="stat mt-1">{{!-- Languages --}}
                        <label class="" for="languages" class="resource-label">{{localize "WEIRDWIZARD.Languages"}}</label>
                        {{system.details.languages.value}}
                    </div>
                    <div class="stat">{{!-- Paths --}}
                        <label for="paths" class="resource-label">{{localize "WEIRDWIZARD.Paths"}}</label>
                        <ol class="summary-list">
                            <li title="{{localize "WEIRDWIZARD.NovicePath"}}">{{system.details.novice.value}}</li>
                            <li title="{{localize "WEIRDWIZARD.ExpertPath"}}">{{system.details.expert.value}}</li>
                            <li title="{{localize "WEIRDWIZARD.MasterPath"}}">{{system.details.master.value}}</li>
                        </ol>
                    </div>
                    <div class="stat mt-1">{{!-- Defense, Health, Damage --}}
                        <label for="defense" class="resource-label">{{localize "WEIRDWIZARD.Defense"}}</label>
                        <a class="defense-edit">{{system.stats.defense.total}}</a>
                        <label class="ml-1" for="health" class="resource-label">{{localize "WEIRDWIZARD.Health.Title"}}</label>
                        <a class="defense-edit">{{system.stats.health.total}}</a>
                        <label class="ml-1" for="damage" class="resource-label">{{localize "WEIRDWIZARD.Damage"}}</label>
                        {{system.stats.damage.value}}
                    </div>
                    <div class="stat mt-1">{{!-- Attributes 1 --}}
                        <label for="str" class="resource-label">{{localize "WEIRDWIZARD.Strength"}}</label>
                        {{system.attributes.str.value}} ({{numberFormat system.attributes.str.mod decimals=0 sign=true}})
                        <label class="ml-1" for="agi" class="resource-label">{{localize "WEIRDWIZARD.Agility"}}</label>
                        {{system.attributes.agi.value}} ({{numberFormat system.attributes.agi.mod decimals=0 sign=true}})
                    </div>
                    <div class="stat">{{!-- Attributes 2 --}}
                        <label for="int" class="resource-label">{{localize "WEIRDWIZARD.Intellect"}}</label>
                        {{system.attributes.int.value}} ({{numberFormat system.attributes.int.mod decimals=0 sign=true}})
                        <label class="ml-1" for="wil" class="resource-label">{{localize "WEIRDWIZARD.Will"}}</label>
                        {{system.attributes.wil.value}} ({{numberFormat system.attributes.wil.mod decimals=0 sign=true}})
                    </div>
                    <div class="stat mt-1">{{!-- Size, Speed --}}
                        <label for="size" class="resource-label">{{localize "WEIRDWIZARD.Size"}}</label>
                        {{system.stats.size.value}}
                        <label class="ml-1" for="speed" class="resource-label">{{localize "WEIRDWIZARD.Speed"}}</label>
                        {{system.details.speed.value}}
                    </div>
                    {{#if system.details.immune.value}}<div class="stat mt-1">{{!-- Immune --}}
                        <label class="" for="immune" class="resource-label">{{localize "WEIRDWIZARD.Immune"}}</label>
                        {{system.details.immune.value}}
                    </div>{{/if}}
                    
                    <h3 class="mt-2">{{localize "WEIRDWIZARD.Attacks"}}</h3>
                    <div class="stat">{{!-- Bonus Damage --}}
                        <label class="" for="bonusdamage" class="resource-label">{{localize "WEIRDWIZARD.BonusDamage"}}</label>
                        {{#if system.stats.bonusdamage.value}}{{system.stats.bonusdamage.value}}{{else}}0{{/if}}
                    </div>
                    <div class="mt-1">
                        <ol class="attack-list">
                        {{#each weapons as |item id|}}
                            <li class="item item-edit" data-item-id="{{item._id}}">
                                <a>{{item.name}}</a> ({{item.system.damage}}, {{item.system.hands}}{{#if item.system.properties}}, {{item.system.properties}}{{/if}})
                            </li>
                        {{/each}}
                        </ol>
                    </div>
                </div>

                <div>{{!-- Right Column --}}
                    <h3>{{localize "WEIRDWIZARD.Talents"}}</h3>
                    <ol class="summary-list">
                    {{#each talents as |item id|}}
                        <li class="item item-edit" data-item-id="{{item._id}}"><a>{{item.name}}</a></li>
                    {{/each}}
                    </ol>
                    <h3 class="mt-2">{{localize "WEIRDWIZARD.Spells"}}</h3>
                    <ol class="summary-list">
                    {{#each spells as |item id|}}
                        <li class="item item-edit" data-item-id="{{item._id}}"><a>{{item.name}}</a></li>
                    {{/each}}
                    </ol>
                </div>
            </div>
        </div>

        <div class="tab stats" data-group="primary" data-tab="stats">{{!-- Stats Tab --}}
            <div class="stats grid grid-2col">

                <div class="details-col flex-group-center">{{!-- Left Column --}}
                    <h2 class="detail-label">{{localize "WEIRDWIZARD.Traits"}}</h2>
                    <div class="flex-row stat-inline">{{!-- Level & Ancestry --}}
                        <label for="system.stats.level.value" class="resource-label">{{localize "WEIRDWIZARD.Level"}}</label>
                        <input type="number" name="system.stats.level.value" value="{{system.stats.level.value}}" min="1" data-dtype="Number"/>
                        <label for="system.details.ancestry.value" class="resource-label ml-1">{{localize "WEIRDWIZARD.Ancestry"}}</label>
                        <input type="text" name="system.details.ancestry.value" value="{{system.details.ancestry.value}}" data-dtype="String"/>
                    </div>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Type --}}
                        <label for="system.details.type.value" class="resource-label">{{localize "WEIRDWIZARD.Type"}}</label>
                        <input type="text" name="system.details.type.value" value="{{system.details.type.value}}" data-dtype="String"/>
                    </div>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Senses --}}
                        <label for="system.details.senses.value" class="resource-label">{{localize "WEIRDWIZARD.Senses"}}</label>
                        <input type="text" name="system.details.senses.value" value="{{system.details.senses.value}}" data-dtype="String"/>
                    </div>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Size, Speed --}}
                        <label for="system.stats.size.value" class="resource-label">{{localize "WEIRDWIZARD.Size"}}</label>
                        <input type="number" name="system.stats.size.value" value="{{system.stats.size.value}}" data-dtype="Number" placeholder="1"/>
                        <label for="system.details.speed.value" class="resource-label ml-2">{{localize "WEIRDWIZARD.Speed"}}</label>
                        <input type="text" name="system.details.speed.value" value="{{system.details.speed.value}}" data-dtype="String" placeholder="{{localize "WEIRDWIZARD.SpeedPH"}}"/>
                    </div>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Immune --}}
                        <label for="system.details.immune.value" class="resource-label">{{localize "WEIRDWIZARD.Immune"}}</label>
                        <input type="text" name="system.details.immune.value" value="{{system.details.immune.value}}" data-dtype="String" placeholder="{{localize "WEIRDWIZARD.ImmunePH"}}"/>
                    </div>
                </div>

                <div class="details-col flex-group-center">{{!-- Right Column --}}
                    <h2>{{localize "WEIRDWIZARD.Knowledge"}}</h2>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Languages --}}
                        <label for="system.details.languages.value" class="resource-label">{{localize "WEIRDWIZARD.Languages"}}</label>
                        <input type="text" name="system.details.languages.value" value="{{system.details.languages.value}}" data-dtype="String" placeholder="{{localize "WEIRDWIZARD.LanguagesPH"}}"/>
                    </div>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Professions --}}
                        <label for="system.details.professions.value" class="resource-label">{{localize "WEIRDWIZARD.Professions"}}</label>
                        <input name="professions" type="text" value="{{system.details.professions.value}}" placeholder="{{localize "WEIRDWIZARD.ProfessionsPH"}}"/>
                    </div>
                    
                    <div class="flex-row stat-inline flex-group-left">{{!-- Novice Path --}}
                        <label for="system.details.novice.value" class="resource-label">{{localize "WEIRDWIZARD.NovicePath"}}</label>
                        <input type="text" name="system.details.novice.value" value="{{system.details.novice.value}}" data-dtype="String"/>
                    </div>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Expert Path --}}
                        <label for="system.details.expert.value" class="resource-label">{{localize "WEIRDWIZARD.ExpertPath"}}</label>
                        <input type="text" name="system.details.expert.value" value="{{system.details.expert.value}}" data-dtype="String"/>
                    </div>
                    <div class="flex-row stat-inline flex-group-left">{{!-- Master Path --}}
                        <label for="system.details.master.value" class="resource-label">{{localize "WEIRDWIZARD.MasterPath"}}</label>
                        <input type="text" name="system.details.master.value" value="{{system.details.master.value}}" data-dtype="String"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab details" data-group="primary" data-tab="details">{{!-- Details Tab --}}
            <div class="details grid grid-2col">

                <div class="details-col flex-group-center">{{!-- Left Column --}}
                    <h1>{{localize "WEIRDWIZARD.Identity"}}</h1>
                    <ol class="details-list">
                    {{#each profile as |detail key|}}
                        <li class="detail">
                            <h2 class="detail-label">{{detail.label}}</h2>
                            {{editor detail.enriched target=detail.datapath button=true owner=../owner editable=../editable}}
                        </li>
                    {{/each}}
                    </ol>
                </div>

                <div class="details-col flex-group-center">{{!-- Right Column --}}
                    <h1>{{localize "WEIRDWIZARD.Background"}}</h1>
                    <ol class="details-list">
                        <li class="detail">
                            <h2 class="detail-label">{{system.details.bg_ancestry.label}}</h2>
                            {{editor system.details.bg_ancestry.enriched target="system.details.bg_ancestry.value" button=true owner=owner editable=editable}}
                        </li>
                        <li class="detail">
                            <h2 class="detail-label">{{system.details.deeds.label}}</h2>
                            <div class="flex-row stat-inline flex-group-center">
                                <label for="system.details.reputation.value" class="resource-label">{{localize "WEIRDWIZARD.Reputation"}}</label>
                                <input type="number" name="system.details.reputation.value" value="{{system.details.reputation.value}}" min="0" data-dtype="Number"/>
                            </div>
                            {{editor system.details.deeds.enriched target="system.details.deeds.value" button=true owner=owner editable=editable}}
                        </li>
                        <li class="detail">
                            <h2 class="detail-label">{{system.details.information.label}}</h2>
                            {{editor system.details.information.enriched target="system.details.information.value" button=true owner=owner editable=editable}}
                        </li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="tab gear" data-group="primary" data-tab="gear">{{!-- Gear Tab --}}
            <div class="grid grid-2col">

                <div class="">{{!-- Left Column --}}
                    <ol class="items-list">
                        <li class="item flexrow item-header">
                            <div class="item-image"></div>
                            <div class="item-name">{{localize "WEIRDWIZARD.Name"}}</div>
                            <div class="item-controls">
                                <a class="item-control item-create" title="Create item" data-type="Weapon"><i class="fas fa-plus"></i> Add weapon</a>
                            </div>
                        </li>
                    {{#each weapons as |item id|}}
                        <li class="item flexrow flex-group-left" data-item-id="{{item._id}}">
                            <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                            <h4 class="item-name">{{item.name}} <a class="rollable item-roll ml-1" title="Roll Attack"><i class="fas fa-dice-d20"></i></a></h4> 
                            <div class="item-controls">
                                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                    {{/each}}
                    </ol>
                </div>

                <div class="flex-group-center">{{!-- Right Column --}}
                    <div class="flex-row stat-inline">{{!-- Coins --}}
                        <label for="system.currency" class="resource-label">{{localize "WEIRDWIZARD.Coins"}}</label>
                        <ol class="coins-list">
                            <li><input type="number" name="system.currency.gp" value="{{system.currency.gp}}" min="0" data-dtype="Number"/> {{localize "WEIRDWIZARD.GP"}}</li>
                            <li><input type="number" name="system.currency.sp" value="{{system.currency.sp}}" min="0" data-dtype="Number"/> {{localize "WEIRDWIZARD.SP"}}</li>
                            <li><input type="number" name="system.currency.cp" value="{{system.currency.cp}}" min="0" data-dtype="Number"/> {{localize "WEIRDWIZARD.CP"}}</li>
                        </ol>
                    </div>
                </div>
            </div>
            
            <div>
                <ol class="items-list">
                    <li class="item flexrow item-header">
                        <div class="item-image"></div>
                        <div class="item-quantity">#</div>
                        <div class="item-name">{{localize "WEIRDWIZARD.Name"}}</div>
                        <div class="item-weight">{{localize "WEIRDWIZARD.Weight"}}<br/><span class="smaller">({{localize "WEIRDWIZARD.Total"}}: {{totalWeight}})</span></div>
                        <div class="item-controls">
                            <a class="item-control item-create" title="Create item" data-type="Gear"><i class="fas fa-plus"></i> Add item</a>
                        </div>
                    </li>
                {{#each gear as |item id|}}
                    <li class="item flexrow" data-item-id="{{item._id}}">
                        <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                        <div class="item-quantity">{{item.system.quantity}}</div>
                        <h4 class="item-name">{{item.name}}</h4>
                        <div class="item-weight">{{item.system.weight}}</div>
                        <div class="item-controls">
                            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                        </div>
                    </li>
                {{/each}}
                </ol>
            </div>
        </div>

        <div class="tab talents" data-group="primary" data-tab="talents">{{!-- Traits & Talents Tab --}}
            <ol class="items-list">
                <li class="item flexrow item-header">
                <div class="item-image"></div>
                <div class="item-name">{{localize "WEIRDWIZARD.Name"}}</div>
                <div>{{localize "WEIRDWIZARD.Type"}}</div>
                <div>{{localize "WEIRDWIZARD.Source"}}</div>
                <div>{{localize "WEIRDWIZARD.Uses"}}</div>
                <div class="item-controls">
                    <a class="item-control item-create" title="Create item" data-type="Talent"><i class="fas fa-plus"></i> Add trait/talent</a>
                </div>
                </li>
            {{#each talents as |item id|}}
                <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                    <h4 class="item-name">{{item.name}}  <a class="rollable item-roll ml-1" title="Roll Talent"><i class="fas fa-dice-d20"></i></a></h4>
                    <div>{{item.system.type.value}}</div>
                    <div>{{item.system.source.value}}</div>
                    <div>
                        {{#each item.uses as |pip id|}}
                            <a class="item-pip" title="{{#if (eq pip "far")}}Spend use{{else}}Recover use{{/if}}"><i class="{{pip}} fa-circle"></i></a>
                        {{/each}}
                    </div>
                    <div class="item-controls">
                        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
            {{/each}}
            </ol>
        </div>

        {{!-- Spells Tab --}}
        <div class="tab spells" data-group="primary" data-tab="spells">
            <div class="flex-row stat-inline">{{!-- Traditions --}}
                <label for="system.details.traditions.value">{{localize "WEIRDWIZARD.Traditions"}}</label>
                <input type="text" name="traditions" value="{{system.details.traditions.value}}" placeholder="{{localize "WEIRDWIZARD.TraditionsPH"}}" data-dtype="String"/>
            </div>
            <ol class="items-list">
                <li class="item flexrow item-header">
                <div class="item-image"></div>
                <div class="item-name">{{localize "WEIRDWIZARD.Name"}}</div>
                <div>{{localize "WEIRDWIZARD.Tier"}}</div>
                <div>{{localize "WEIRDWIZARD.Tradition"}}</div>
                <div>{{localize "WEIRDWIZARD.Castings"}}</div>
                <div class="item-controls">
                    <a class="item-control item-create" title="Create item" data-type="Spell"><i class="fas fa-plus"></i> Add spell</a>
                </div>
                </li>
            {{#each spells as |item id|}}
                <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                    <h4 class="item-name">{{item.name}} <a class="rollable item-roll ml-1" title="Roll Spell"><i class="fas fa-dice-d20"></i></a></h4>
                    <div>{{item.system.tier.value}}</div>
                    <div>{{item.system.tradition.value}}</div>
                    <div>
                        {{#each item.uses as |pip id|}}
                            <a class="item-pip" title="{{#if (eq pip "far")}}Spend casting{{else}}Recover casting{{/if}}"><i class="{{pip}} fa-circle"></i></a>
                        {{/each}}
                    </div>
                    <div class="item-controls">
                        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
            {{/each}}
            </ol>
        </div>
    </section>
</form>