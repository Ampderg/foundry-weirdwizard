<li class="item" data-item-id="{{item._id}}">

    {{!-- Title / Attribute Roll --}}
    {{#if item.system.attribute}}<a class="rollable item-roll" title="{{localize "WW.Item.Roll.Attribute"}}">{{item.name}}</a>
    {{else}}<label>{{item.name}}</label>{{/if}}
    
    <span class="buttons">
        {{#if item.system.description.value}}<a class="item-scroll" title="Send to Chat">
            <i class="far fa-scroll"></i></a>{{/if}}

        {{!-- Toggle Effects --}}
        {{#if ../hasPassiveEffects}}
        <a class="item-toggle-effects" data-item-id="{{item._id}}" 
            title="{{#if item.system.active}}{{localize "WW.Item.DisableEffects"}}
            {{else}}{{localize "WW.Item.EnableEffects"}}{{/if}}">
            <i class="fas {{#if item.system.active}}fa-toggle-on{{else}}fa-toggle-off{{/if}}"></i></a>
        {{/if}}
        
        {{!-- Uses Pips --}}
        {{#if item.uses}}
        <span class="pip-box">
            {{#each item.uses as |pip id|}}
            <a class="item-pip" title="
                {{#if (eq pip "far fa-circle")}}
                    {{#if (eq ../item.system.subtype "action")}}{{localize "WW.Item.Uses.ActionSpend"}}
                    {{else if (eq ../item.system.subtype "fury")}}{{localize "WW.Item.Uses.FurySpend"}}
                    {{else}}{{localize "WW.Item.Uses.TalentSpend"}}{{/if}}
                {{else}}
                    {{#if (eq ../item.system.subtype "action")}}{{localize "WW.Item.Uses.ActionRecover"}}
                    {{else if (eq ../item.system.subtype "fury")}}{{localize "WW.Item.Uses.FuryRecover"}}
                    {{else}}{{localize "WW.Item.Uses.TalentRecover"}}{{/if}}
                {{/if}}">
                <i class="{{pip}}"></i></a>
            {{/each}}
        </span>
        {{/if}}
        
        <a class="item-edit" title="{{localize (concat "WW.Item.Edit." item.type)}}"><i class="fas fa-edit"></i></a>
        <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </span>
    
    {{!-- Description --}}
    {{#if (eq item.system.subtype "aura")}}({{localize "WW.Aura"}} {{item.system.range}}){{/if}}
    <span>{{{item.system.description.enriched}}}</span>
    
    
</li>