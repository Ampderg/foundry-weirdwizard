<ol class="items-list">
    <li class="item flexrow items-header">
        <div class="item-image"></div>
        <div class="item-name">{{localize "WW.Name"}}</div>
        <div>{{localize "WW.Source"}}</div>
        <div>{{localize "WW.UsesTalent"}}</div>
        <div class="item-controls">
            <a class="item-control item-create" title="Create item" data-type="Trait or Talent" data-subtype="trait" data-source="Ancestry"><i class="fas fa-plus"></i> {{localize "WW.Add"}}</a>
        </div>
    </li>
    {{#each talents as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24" /></div>
        <label class="item-name">{{item.name}} <a class="rollable item-roll ml-1" title="Roll Talent"><i
                    class="fas fa-dice-d20"></i></a></label>
        <div>{{item.system.source}}</div>
        <div>
            {{#each item.uses as |pip id|}}
            <a class="item-pip" title="{{#if (eq pip "far")}}Spend use{{else}}Recover use{{/if}}"><i
                    class="{{pip}} fa-circle"></i></a>
            {{/each}}
        </div>
        <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
    </li>
    {{/each}}
</ol>