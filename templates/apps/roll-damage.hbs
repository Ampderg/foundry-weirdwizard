<form class="weirdwizard damage-details">
   
    <div class="">
        <h2>{{label}}</h2>

        <div class="stat-stretch flex-group-left mt-1">
            <label class="resource-label">{{localize "WW.Damage.Base"}}</label>
            <span class="damage-display afflictions">{{baseDamage}}</span>
        </div>

        {{#if versatile}}
        <div class="stat-stretch flex-group-left mt-1">
            <label class="resource-label">{{localize "WW.Damage.BothHands"}}</label>
            <input name="bothHands" class="damage-checkbox bothHands" type="checkbox" title="Apply Extra Damage">
            +1d6
        </div>
        {{/if}}

        <h3 class="mt-2">{{localize "WW.Damage.Extra"}}</h3>

        {{#if bonusDamage}}
        <div class="stat-stretch flex-group-left mt-1">
            <label class="resource-label">{{localize "WW.Damage.Bonus"}}</label>
            <input name="applyBonus" class="damage-checkbox applyBonus" type="checkbox" title="Apply Full Bonus Damage">
            +{{bonusDamage}}d6
        </div>
        {{/if}}

        <div class="stat-stretch flex-group-left mt-1">
            <label class="resource-label">{{localize "WW.Damage.OtherDice"}}</label>
            <input name="otherdice" class="damage-input otherdice" type="number" value="0" min="0"/>
            d6
        </div>

        <div class="stat-stretch flex-group-left mt-1">
            <label class="resource-label">{{localize "WW.Damage.OtherMod"}}</label>
            <input name="othermod" class="damage-input othermod" type="number" value="0" min="0"/>
        </div>
    </div>

    <div class="damage-expression mb-2 mt-2 flex-group-center">{{expression}}</div>

    <div class="form-group">
        <button type="submit" id="damage-submit">
            <i class="fas fa-dice"></i> {{localize "WW.Boons.Roll"}}
        </button>
        <button type="button" id="damage-cancel">
            <i class="fas fa-xmark"></i> {{localize "WW.Cancel"}}
        </button>
    </div>
</form>

